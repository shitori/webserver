            crossorigin="anonymous"></script>
    <title>{{ title }}</title>
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-left">
    <a class="navbar-brand text-danger" href="/"><img src="/images/logo.png" height="60em" width="150em" alt="logo">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/enquetes?show=a">Voir toutes les enquêtes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/enquetes?show=c">Créer une enquête</a>
            </li>
        </ul>
    </div>
</nav>

<body class="bg-light mx-auto text-center mb-5">
{% if message and title !== 'Erreur' %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endif %}
{% if error and title !== 'Erreur' %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{% endif %}
{% block  content %}
{% endblock %}

<!-- Optional JavaScript; choose one of the two! -->

